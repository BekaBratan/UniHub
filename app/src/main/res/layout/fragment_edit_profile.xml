<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_800"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.profile.EditProfileFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/white_1000"
        android:layout_marginTop="58dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black_900"
        android:ellipsize="end"
        android:text="Bio-data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="39dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            android:layout_width="78dp"
            android:layout_height="78dp"
            app:shapeAppearanceOverlay="@style/style_corner_rounded"
            android:scaleType="centerCrop"
            android:src="@drawable/king_speech"/>

        <TextView
            android:id="@+id/tvMainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black_1000"
            android:ellipsize="end"
            android:layout_marginTop="18dp"
            android:text="Akniyet Serik"/>

        <TextView
            android:id="@+id/tvMainEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="akniyet.serik@gmail.com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="34dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey_600"
                android:ellipsize="end"
                android:text="Name"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etName"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                android:text="Akniyet"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="34dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvSurname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey_600"
                android:ellipsize="end"
                android:text="Surname"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etSurname"
                android:inputType="textPersonName"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                android:text="Serik"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="34dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey_600"
                android:ellipsize="end"
                android:text="Phone"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etPhone"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                android:text="+7 747 777 77 77"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="34dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:text="Gender"
                android:textColor="@color/grey_600"
                android:textSize="15sp" />

            <AutoCompleteTextView
                android:id="@+id/etGender"
                android:inputType="none"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                android:text="Female"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="34dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvBirthDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/grey_600"
                android:ellipsize="end"
                android:text="Birth date"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/etBirthDate"
                android:inputType="none"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_600"
                android:textSize="14sp"
                android:text="28.01.2004"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_calendar"
                android:layout_weight="2"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/red_900"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:text="Birth date"
            android:visibility="invisible"
            android:layout_weight="1"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sh_12dp"
        android:backgroundTint="@color/blue_800"
        android:text="Save"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="16sp"
        android:textColor="@color/white_1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="58dp"
        android:layout_marginHorizontal="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>