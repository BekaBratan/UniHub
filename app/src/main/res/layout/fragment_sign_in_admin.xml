<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.authentication.signup.SignInAdminFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/white_1000"
        android:layout_marginTop="70dp"
        android:layout_marginStart="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/llIndicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@drawable/sh_rounded"
            android:backgroundTint="@color/violet_200"
            android:layout_marginEnd="9dp"/>

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@drawable/sh_rounded"
            android:backgroundTint="@color/grey_100"
            android:layout_marginEnd="9dp"/>

        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@drawable/sh_rounded"
            android:backgroundTint="@color/grey_100"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:orientation="vertical"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/llIndicators">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:text="This function is available to a limited number of individuals."
            android:textColor="@color/red_900"
            android:textSize="16sp"
            android:layout_marginHorizontal="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Create a nickname"
            android:textColor="@color/grey_900"
            android:layout_marginTop="18dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etName"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Email"
            android:textColor="@color/grey_900"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Password"
            android:textColor="@color/grey_900"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Confirm password"
            android:textColor="@color/grey_900"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword2"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sh_12dp"
        android:backgroundTint="@color/blue_800"
        android:text="Create an account"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="16sp"
        android:textColor="@color/white_1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="70dp"
        android:layout_marginHorizontal="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>