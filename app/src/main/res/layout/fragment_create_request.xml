<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.profile.CreateRequestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/white_1000"
            android:layout_marginTop="58dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_semibold"
            android:textColor="@color/grey_900"
            android:ellipsize="end"
            android:text="Request to create a club"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"/>

        <LinearLayout
            android:id="@+id/llPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <TextView
                android:id="@+id/tvRequests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Requests"
                android:textAlignment="center"
                android:textColor="@color/black_1000"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvMyRequests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="My Requests"
                android:textAlignment="center"
                android:textColor="@color/black_1000"
                android:textSize="16sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llIndicators"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/llPages">

            <View
                android:id="@+id/idRequests"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/black_1000"
                android:visibility="visible"
                android:layout_weight="1"/>

            <View
                android:id="@+id/idMyRequests"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/black_1000"
                android:visibility="invisible"
                android:layout_weight="1"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:paddingTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="22dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/llPages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/llRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="42dp"
            android:layout_marginHorizontal="22dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/llPages">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textAlignment="center"
                android:text="@string/fill_the_fields_to_create_a_club_and_get_admin_rights"
                android:textColor="@color/grey_900"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/title"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etTitle"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/name_of_the_club"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etClubName"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/goal_of_the_club"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etGoal"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/detailed_description"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etDescription"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/club_financing"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etFinance"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/resources_equipment_needed_for_the_club"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etEquipment"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/methods_of_attracting_participants"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etMethods"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/email"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etEmail"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/phone"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etPhone"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/other_communication_methods"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etContacts"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/comment"
                android:textColor="@color/grey_900"
                android:layout_marginTop="14dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/etComment"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textAlignment="center"
                android:text="@string/error_please_fill_all_fields"
                android:textColor="@color/red_900"
                android:layout_marginTop="14dp"
                android:visibility="invisible"
                android:textSize="13sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/sh_12dp"
                android:backgroundTint="@color/blue_800"
                android:text="@string/send"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="16sp"
                android:textColor="@color/white_1000"
                android:layout_marginBottom="34dp"
                android:layout_marginTop="14dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>