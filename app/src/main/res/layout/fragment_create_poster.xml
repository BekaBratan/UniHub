<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.club.CreatePosterFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/transparent"
        android:layout_marginTop="58dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_semibold"
        android:textColor="@color/grey_900"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Create Poster"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

    <LinearLayout
        android:id="@+id/llRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="22dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_people"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Event Title"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etEventTitle"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_calendar_event"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Date of the Event:"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/etDate"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_calendar_event"
                android:drawableTint="@color/grey_600"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_map_pin"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Location:"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etLocation"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_clock_event"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Time:"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/etTime"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_clock_event"
                android:drawableTint="@color/grey_600"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_menu_hamburger"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Description:"
                android:textColor="@color/grey_900"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etDescription"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_people"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Seats:"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etSeats"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_up_down"
                android:drawableTint="@color/grey_600"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_people"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Price:"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/etPrice"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_gallery"
                android:backgroundTint="@color/grey_900"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Add Media:"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/etMedia"
                android:inputType="text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/sh_edit_text"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey_600"
                android:textColor="@color/grey_900"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_gallery"
                android:drawableTint="@color/grey_600"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/sh_12dp"
            android:backgroundTint="@color/blue_800"
            android:text="Send"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_semibold"
            android:textSize="16sp"
            android:textColor="@color/white_1000"
            android:layout_marginVertical="34dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>