<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.admin.EditUserFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/white_1000"
        android:layout_marginTop="58dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="18dp"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_semibold"
        android:textColor="@color/black_1000"
        android:ellipsize="end"
        android:text="Zhasmin Arman"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"/>

    <ImageButton
        android:id="@+id/btnEditUser"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_edit"
        android:background="@color/white_1000"
        android:layout_marginTop="28dp"
        android:layout_marginStart="48dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvEditUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/grey_600"
        android:ellipsize="end"
        android:text="Edit User"
        app:layout_constraintTop_toTopOf="@+id/btnEditUser"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
        app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

    <LinearLayout
        android:id="@+id/llOptions"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@+id/llEditUser"
        app:layout_constraintBottom_toBottomOf="@+id/llEditUser"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="Status"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/btnEditUser"
            app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
            app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="Phone"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/btnEditUser"
            app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
            app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="Position"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/btnEditUser"
            app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
            app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="Organization"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/btnEditUser"
            app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
            app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="Activity"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@+id/btnEditUser"
            app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
            app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey_600"
            android:ellipsize="end"
            android:text="Club name "
            android:gravity="center"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="@+id/btnEditUser"
            app:layout_constraintBottom_toBottomOf="@+id/btnEditUser"
            app:layout_constraintStart_toEndOf="@+id/btnEditUser"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEditUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEditUser"
        app:layout_constraintStart_toEndOf="@+id/llOptions"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etStatus"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:hint="Select status"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_arrow_down"/>

        <EditText
            android:id="@+id/etPhone"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:hint="+7 747 777 77 77"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/etPosition"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:hint="Head of the Club"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/etOrganization"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:hint="SDU LTD"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/etActivity"
            android:inputType="datetime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:hint="12:23, 3 march"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"/>

        <EditText
            android:id="@+id/etClubName"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/sh_edit_text"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey_600"
            android:textColor="@color/grey_900"
            android:textSize="16sp"
            android:hint="Puzzle Club"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sh_12dp"
        android:backgroundTint="@color/blue_800"
        android:text="Save"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="16sp"
        android:textColor="@color/white_1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="58dp"
        android:layout_marginHorizontal="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>