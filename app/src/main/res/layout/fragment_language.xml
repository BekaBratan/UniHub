<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.profile.LanguageFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/transparent"
        android:layout_marginTop="45dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Languages"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black_1000"
        android:ellipsize="end"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:orientation="vertical"
        android:background="@drawable/sh_10dp"
        android:backgroundTint="@color/grey_100"
        android:clipChildren="true"
        android:clipToOutline="true"
        android:layout_marginTop="44dp"
        android:layout_marginHorizontal="26dp">

        <LinearLayout
            android:id="@+id/llEnglish"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="22dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black_1000"
                    android:ellipsize="end"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By default"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/grey_600"
                    android:ellipsize="end"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/idEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:background="@color/transparent"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:backgroundTint="@color/white_1000"
            android:background="@drawable/divider_1dp" />

        <LinearLayout
            android:id="@+id/llRussian"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="22dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Руский"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black_1000"
                android:ellipsize="end"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/idRussian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:visibility="invisible"
                android:background="@color/transparent"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            android:backgroundTint="@color/white_1000"
            android:background="@drawable/divider_1dp" />

        <LinearLayout
            android:id="@+id/llKazakh"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="22dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Қазақ"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black_1000"
                android:ellipsize="end"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/idKazakh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"
                android:visibility="invisible"
                android:background="@color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>