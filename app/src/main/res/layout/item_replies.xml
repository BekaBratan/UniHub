<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="32dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:background="@drawable/sh_stroke_1dp"
            android:padding="2dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivClubAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/style_corner_rounded"
                android:src="@drawable/puzzle_club"/>

        </LinearLayout>

        <View
            android:id="@+id/idReplied"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/divider_1dp"
            android:layout_marginVertical="20dp"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_marginStart="25dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvRequestsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_semibold"
            android:text="Akniyet Serik"
            android:textColor="@color/black_900"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik Akniyet Serik "
            android:textColor="@color/black_800"
            android:textSize="13sp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnLike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_unliked"/>

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black_1000"
                android:ellipsize="end"
                android:text="12"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnMessage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_message"/>

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black_1000"
                android:ellipsize="end"
                android:text="12"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnRepost"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_repost"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnSend"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_send"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/grey_200"
        android:text="49m"/>

</LinearLayout>